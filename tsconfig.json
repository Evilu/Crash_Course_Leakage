{
  "compilerOptions": {
    "incremental": true,
    "target": "es2021",
    "module": "commonjs",
    "lib": [
      "es2021"
    ],
    "strict": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "build",
    "rootDir": "./",

  },
  "exclude": [
    "node_modules",
    "build"
  ]
}
